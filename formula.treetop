grammar FormulaGrammar
  rule additive
    head:multiplicative tail:(space* operator:[+-] space* operand:multiplicative)* <Formula::Nodes::AdditiveNode>
  end

  rule multiplicative
    head:operand tail:(space* operator:[*/] space* operand:operand)* <Formula::Nodes::MultiplicativeNode>
  end

  rule operand
    reference / signed_number / string / group / function
  end

  rule group
    '(' space* content:additive space* ')' <Formula::Nodes::GroupNode>
  end

  rule function
    name:[a-zA-Z]+ '(' space* arguments:arguments_list? space* ')' <Formula::Nodes::FunctionNode>
  end

  rule arguments_list
    head:argument tail:(space* ';' space* arguments:arguments_list)* <Formula::Nodes::ArgumentListNode>
  end

  rule argument
    range / additive / operand
  end

  rule range
    top:reference ':' bottom:reference <Formula::Nodes::RangeNode>
  end

  rule reference
    col:[a-zA-Z]+ row:([1-9] [0-9]+ / [1-9]) <Formula::Nodes::ReferenceNode>
  end

  rule signed_number
    sign? number <Formula::Nodes::NumberNode>
  end

  rule number
    ([0-9]+ '.')? [0-9]+
  end

  rule sign
    [+-]
  end

  rule string
    quote chars:(!quote .)* quote <Formula::Nodes::StringNode>
  end

  rule quote
    '"'
  end

  rule space
    ' '
  end
end
